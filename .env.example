# ============================================================================
# SentinelAI School Security Monitoring System
# Copy this file to .env and customize for your environment
# ============================================================================

# ── Backend Server ──────────────────────────────────────────────────────────
BACKEND_URL=http://localhost:8000/event
DASHBOARD_URL=http://localhost:3000
ALERT_WS_URL=ws://localhost:8000/ws/alerts

# ── Tenant Configuration ────────────────────────────────────────────────────
TENANT_ID=school1
CAMERA_ID=cam1

# ── AI Worker Settings ──────────────────────────────────────────────────────
# Frame processing rate (frames per second)
FRAME_FPS=5

# Event flood protection - cooldown between duplicate events (seconds)
EVENT_COOLDOWN_SECONDS=10

# Maximum frames per second per camera (throttle)
MAX_FPS_PER_CAMERA=10

# YOLO model directory (optional, defaults to ai_worker/models/)
# YOLO_MODEL_DIR=/path/to/models

# ── Re-Identification (Re-ID) Settings ──────────────────────────────────────
# Similarity threshold for person matching (0.0 - 1.0)
REID_SIMILARITY_THRESHOLD=0.65

# Time-to-live for gallery entries (seconds) - how long to remember a person
REID_GALLERY_TTL=120

# Cross-camera detection window (seconds) - time window to detect same person across cameras
REID_CROSS_CAMERA_WINDOW=30

# ── School Hours Configuration ──────────────────────────────────────────────
# Format: HH:MM (24-hour) - detections outside these hours trigger after_hours_intrusion
SCHOOL_HOURS_START=07:30
SCHOOL_HOURS_END=17:00

# ── LLM Integration (for alert summaries) ───────────────────────────────────
# Leave blank to use mock summaries
# Supports OpenAI-compatible APIs:
# - OpenAI:    https://api.openai.com/v1
# - Groq:      https://api.groq.com/openai
# - LM Studio: http://localhost:1234/v1
# - OpenRouter: https://openrouter.ai/api/v1
LLM_API_BASE=
LLM_API_KEY=
LLM_MODEL=gpt-4o-mini

# ── Demo Mode ───────────────────────────────────────────────────────────────
# Set to 1 to enable demo mode with simulated events
DEMO_MODE=0

# ── Redis (optional, for distributed workers) ───────────────────────────────
REDIS_URL=redis://localhost:6379/0
FRAME_QUEUE=frames
CAMERA_URL=0

# ── S3/MinIO Storage (optional, for video clip storage) ────────────────────
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key

# ── Kafka (optional, for event streaming) ───────────────────────────────────
KAFKA_BROKER=localhost:9092
